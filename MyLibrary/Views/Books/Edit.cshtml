@model MyLibrary.ViewModels.BookEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Book.BookId" />
            <div class="form-group">
                <label asp-for="Book.Title" class="control-label"></label>
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Author" class="control-label"></label>
                <input asp-for="Book.Author" class="form-control" />
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.ISBN" class="control-label"></label>
                <input asp-for="Book.ISBN" class="form-control" />
                <span asp-validation-for="Book.ISBN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Book.CheckedOut" /> @Html.DisplayNameFor(model => model.Book.CheckedOut)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Book.LibraryId" class="control-label"></label>
                <select asp-for="Book.LibraryId" class="form-control" asp-items="@Model.Libraries"></select>
                <span asp-validation-for="Book.LibraryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.PatronId" class="control-label"></label>
                <select asp-for="Book.PatronId" class="form-control" asp-items="@Model.Patrons"></select>
                <span asp-validation-for="Book.PatronId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
